<Page x:Class="Assignment.Payment_Type"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Assignment"
      mc:Ignorable="d"
      Title="Payment_Type" Height="150" Width="340">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Fare Amount: " FontSize="10" Margin="10,10,0,10" />
                <TextBox  Margin="0,5,0,0" HorizontalAlignment="Center" Height="15" Width="100"/>
            </StackPanel>
            
                <StackPanel Orientation="Horizontal" >
                    <Button Content="Cash" Margin="10,0,0,0" Height="30" Width="100"  ></Button>
                    <Button Content="Card" Margin="10,0,0,0" Height="30" Width="100"  ></Button>
                    <Button Content="Back to HomePage" Margin="10,0,0,0" Height="20" HorizontalAlignment="Center" />
                </StackPanel>
        </StackPanel>
    </Grid>
</Page>
